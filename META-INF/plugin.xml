<idea-plugin version="2">
    <id>FrozenIdea</id>
    <name>Frozen Idea</name>
    <description>ICE framework support.</description>
    <version>0.0.1.2</version>
    <vendor email="xblackcat@gmail.com"
            url="http://code.google.com/p/ice-framework-idea-plugin/"
            logo="/icons/facet-32.png"
            >xBlackCat</vendor>
    <idea-version since-build="130.1"/>
    <depends>com.intellij.modules.lang</depends>
    <change-notes><![CDATA[<ul>
            <li><b>0.0.0.1</b> - First revision: Only syntax highlighting</li>
            <li><b>0.0.0.2</b> - Slice2Java translation was added.</li>
            <li><b>0.0.0.3</b> - More error detections while file parsing. Allow to configure translation to several languages. Autodetection of Ice library in module classpath.</li>
            <li><b>0.0.0.4</b> - Search source files for #include directive in content and source roots. Added line/block commenter.</li>
            <li><b>0.0.0.5</b> - FIX: configuration check bug prevent compilation start
            <li><b>0.0.1.0</b> - Create a link between a java code and slice definitions. Implement find usages action</li>
            <li><b>0.0.1.1</b> - Find usages of generated objects.</li>
            </ul>]]>
    </change-notes>

    <project-components>
        <component>
            <implementation-class>org.xblackcat.frozenice.FrozenIdea</implementation-class>
        </component>
    </project-components>

    <depends optional="true" config-file="plugin-java.xml">com.intellij.modules.java</depends>
    <extensions defaultExtensionNs="com.intellij">
        <fileTypeFactory implementation="org.xblackcat.frozenice.IceFileTypeFactory"/>
        <compilerFactory implementation="org.xblackcat.frozenice.processor.SliceCompilerFactory" />

        <projectConfigurable instance="org.xblackcat.frozenice.config.IceFrameworkConfigurable" id="frozenidea"/>

        <frameworkSupport implementation="org.xblackcat.frozenice.facet.IceFacetSupportProvider"/>
        <facetType implementation="org.xblackcat.frozenice.facet.IceFacetType"/>

        <lang.syntaxHighlighterFactory key="SLICE"
                                       implementationClass="org.xblackcat.frozenice.SliceSyntaxHighlighterFactory"/>
        <lang.parserDefinition language="SLICE" implementationClass="org.xblackcat.frozenice.SliceParserDefinition"/>
        <lang.braceMatcher language="SLICE" implementationClass="org.xblackcat.frozenice.SliceBraceMatcher"/>
        <lang.foldingBuilder language="SLICE" implementationClass="org.xblackcat.frozenice.code.SliceFoldingBuilder"/>

        <codeInsight.lineMarkerProvider language="SLICE"
                                        implementationClass="org.xblackcat.frozenice.link.SliceLineMarkerProvider"/>

        <lang.commenter language="SLICE" implementationClass="org.xblackcat.frozenice.code.SliceCommenter"/>
        <lang.findUsagesProvider language="SLICE"
                                 implementationClass="org.xblackcat.frozenice.find.usages.SliceFindUsagesProvider"/>

        <!--<completion.contributor language="SLICE" implementationClass="org.xblackcat.frozenice.completion.SliceCompletionContributor" id="sliceBasic"/>-->
        <completion.contributor language="SLICE"
                                implementationClass="org.xblackcat.frozenice.completion.SliceMetadataCompletionContributor"
                                id="sliceMetadata"/>
        <findUsagesHandlerFactory implementation="org.xblackcat.frozenice.find.usages.SliceFindUsagesHandlerFactory" id="slice"
                                  order="last, before default"/>

    </extensions>
</idea-plugin>